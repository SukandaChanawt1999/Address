<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/FirstName"
            android:text="First Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterFirstName"
            android:hint="Enter first name"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/FirstName"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/LastName"
            android:text="Last Name"
            android:textColor="#000000"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterFirstName"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterLastName"
            android:hint="Last Name"
            android:inputType="text"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/LastName"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/Address"
            android:text="Address"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterLastName"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterAddress"
            android:hint="Enter address"
            android:inputType="text"
            android:textColor="#666666"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/Address"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/City"
            android:text="City"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterAddress"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterCity"
            android:hint="Enter city"
            android:inputType="text"
            android:textColor="#666666"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/City"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/Province"
            android:text="Province"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterCity"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterProvince"
            android:hint="Enter province"
            android:inputType="text"
            android:textColor="#666666"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/Province"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/Country"
            android:text="Country"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterProvince"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterCountry"
            android:hint="Enter country"
            android:inputType="text"
            android:textColor="#666666"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/Country"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:id="@+id/Phone"
            android:text="Phone"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/EnterCountry"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <EditText
            android:id="@+id/EnterPhone"
            android:hint="Enter phone"
            android:inputType="phone"
            android:ems="10"
            android:textSize="16dp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_below="@+id/Phone"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <Button
            android:id="@+id/Save"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/EnterPhone"
            android:layout_alignStart="@+id/EnterPhone"
            android:layout_alignLeft="@+id/EnterPhone"
            android:layout_alignEnd="@+id/EnterPhone"
            android:layout_alignRight="@+id/EnterPhone"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="247dp"
            android:layout_marginRight="247dp"
            android:fontFamily="sans-serif-condensed"
            android:text="save"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>


</ScrollView>